<!-- The  publication.xml  and  publication-styled.xml  files    -->
<!-- are very similar.  The latter specifies a LaTeX style,      -->
<!-- which mostly manipulates fonts, and lacks any configuration -->
<!-- for an HTML version.  Edits should consider keeping these   -->
<!-- two files in sync.                                          -->

<publication>

    <!-- LaTeX only, no "html" section -->

    <latex font-size="10" latex-style="guide">
        <page>
            <geometry>letterpaper,total={6.5in,9in}</geometry>
        </page>
    </latex>

    <!-- Relative path, relative to "main" source file -->
    <source>
        <directories external="external" generated="generated"/>
    </source>

</publication>
