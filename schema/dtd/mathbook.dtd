<!-- Doc Info -->
<!-- ######## -->

<!-- A mini-database of relevant information with no natural home -->

<!ELEMENT docinfo   (brandlogo|latex-preamble|macros|latex-image-preamble|initialism|feedback|rename)*>
    <!ATTLIST docinfo xml:base CDATA    #IMPLIED>
