<!-- The "pi" namespace is necessary for the "internal" -->
<!-- markup at the outer level of this file.            -->
<pi:privatesolutions  xmlns:pi="http://pretextbook.org/2020/pretext/internal">

    <!-- "exercise-essay" is "Essay Question: Compare and Contrast" -->
    <answer ref="exercise-essay">
        <p>A private answer.</p>
    </answer>

    <solution ref="exercise-essay">
        <p>A private solution.</p>
    </solution>

    <!-- The "pi:privatessolutionsdivision" is not necessary for a   -->
    <!-- *single* file holding private solutions.  But if you choose -->
    <!-- to spread your solutions across several files with the      -->
    <!-- "xi:include" mechanism, hten you need each file to have a   -->
    <!-- single overall (root) XML element.  So this element is only -->
    <!-- meant to play that role.  It can be nested arbitrarily.     -->
    <!-- We only use it here for testing purposes  - it is not       -->
    <!-- necessary, nor is it harmful in this case.                  -->

    <pi:privatessolutionsdivision>
        <!-- "inline-exercise" is "An Inline Exercise" -->
        <hint ref="inline-exercise">
            <p>A private hint.</p>
        </hint>

        <solution ref="inline-exercise">
            <p>First of two private solutions.</p>
        </solution>

        <solution ref="inline-exercise">
            <p>Second of two private solutions.</p>
        </solution>
    </pi:privatessolutionsdivision>

    <!-- a terminal task in "A very structured project" -->
    <answer ref="deep-terminal-task">
        <p>A private answer to a nested task.</p>
    </answer>

    <solution ref="deep-terminal-task">
        <p>A private solution to a nested task.</p>
    </solution>
</pi:privatesolutions>
