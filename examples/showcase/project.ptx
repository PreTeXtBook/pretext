<project>
  <targets>
    <target name="html">
      <format>html</format>
      <source>source/pretext-showcase.ptx</source>
      <publication>publisher/publication.xml</publication>
      <output-dir>output/html</output-dir>
    </target>
    <target name="latex">
      <format>latex</format>
      <source>source/pretext-showcase.ptx</source>
      <publication>publisher/publication.xml</publication>
      <output-dir>output/latex</output-dir>
    </target>
    <target name="pdf" pdf-method="pdflatex">
      <format>pdf</format>
      <source>source/pretext-showcase.ptx</source>
      <publication>publisher/publication.xml</publication>
      <output-dir>output/pdf</output-dir>
