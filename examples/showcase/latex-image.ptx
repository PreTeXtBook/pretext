              c(\x)= cos(\x^2*180/3.14159265359);
              sp(\x)=sqrt(4+\x^2*c(\x));
              sm(\x)=sqrt(4-\x^2*c(\x));
              m(\x)= 2+sm(\x);
              o(\x)= 2-sm(\x);
              p(\x)= 2+sp(\x);
              q(\x)= 2-sp(\x);
              f(\x)= \x^2/m(\x);
              g(\x)= m(\x)/c(\x);
              h(\x)= -\x^2/p(\x);
              k(\x)= p(\x)/c(\x);
