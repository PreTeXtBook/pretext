              xtick = {10},
              ytick = {10},
              ztick = {10},
              samples = 10,
              samples y = 10,
              axis lines = center,
            ]
              \addplot3[surf, shader = faceted interp, domain = -2:0, y domain = -2:0,] ({x+y}, {x^2}, {y^2});
              \addplot3[&lt;->, domain = -2:2, samples y= 0] ({-1+x}, {1^2}, {x^2});
