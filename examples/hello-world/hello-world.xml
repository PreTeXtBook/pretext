<pretext>
    <book xml:id="hello-world">

      <chapter>
        <title>Hello World</title>

        <section>
          <title>First Section</title>
          <p>This is a bare minimum example of MathBook XML.  It has a chapter, a section, and a paragraph.</p>
          <exercise label="inline-ex">
            <statement>
              <p>
                Do something.
              </p>
            </statement>
            <hint><p>Try harder.</p></hint>
            <answer><p>Yes.</p></answer>
            <solution><p>Step 1....</p></solution>
          </exercise>
        </section>

        <exercises>
          <exercise label="division-ex">
            <statement>
              <p>
                Statement
              </p>
            </statement>
            <program interactive="activecode" language="python">
            </program>
            <hint><p>Try harder.</p></hint>
            <answer><p>Yes.</p></answer>
            <solution><p>Step 1....</p></solution>
          </exercise>
        </exercises>
      </chapter>

    </book>
</pretext>
