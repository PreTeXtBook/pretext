<docinfo>

    <!-- the other option is "long" which will produce an -->
    <!-- entire front matter section with more headings   -->
    <author-biographies length="short" />

    <!-- A blurb like this should be authored with no markup whatsoever, -->
    <!-- since it may migrate to unexpected places, like the back cover  -->
    <!-- of a printed version.  Keep it simple.                          -->
    <blurb shelf="Author/Instructor Help">This is a book written in PreTeXt, in order to provide testing for a variety of purposes, not least a conversion to Runestone Academy.</blurb>

    <brandlogo url="http://abstract.pugetsound.edu" source="cover_aata_2014.png" />

    <document-id edition="2">PTXSB</document-id>

    <!-- Prefix to enhance Sage notebook contents -->
    <initialism>SB</initialism>

    <!-- Math-related macros from "macros.tex" in previous LaTeX version -->
    <!-- \notdivide replaces \notmid to avoid conflict with tikz - TWJ 5/6/2010 -->
    <!-- Added operator \gf  - TWJ 2/26/2013 -->
    <!-- Added operator \inn - TWJ 4/6/2013  -->
    <!-- Added operator \aut - TWJ 4/6/2013  -->
    <!-- Added operator \Hom - TWJ 8/19/2010 -->
    <macros>
    \newcommand{\identity}{\mathrm{id}}
    \newcommand{\notdivide}{{\not{\mid}}}
    \newcommand{\notsubset}{\not\subset}
    \newcommand{\lcm}{\operatorname{lcm}}
    \newcommand{\gf}{\operatorname{GF}}
    \newcommand{\inn}{\operatorname{Inn}}
    \newcommand{\aut}{\operatorname{Aut}}
    \newcommand{\Hom}{\operatorname{Hom}}
    \newcommand{\cis}{\operatorname{cis}}
    \newcommand{\chr}{\operatorname{char}}
    \newcommand{\Null}{\operatorname{Null}}
    </macros>

    <!-- this is the default, but supresses a warning -->
    <cross-references text="type-global" />

    <!-- tikz package and libraries for images -->
    <latex-image-preamble>
    \usepackage{tikz}
    \usetikzlibrary{backgrounds}
    \usetikzlibrary{arrows,matrix}
    \usetikzlibrary{snakes}
    </latex-image-preamble>

    <!-- Any program or Runestone interactive without a @language will -->
    <!-- assumed to be python                                          -->
    <programs language="python"/>
    <!-- Any parsons problems will be assumed to be natural language   -->
    <!-- If not set, this would default to programs@language           -->
    <!-- If neither is set, parsons will default to "natural" language -->
    <parsons language="natural"/>

    <!-- Can be set to "no" to make short answer areas not default to  -->
    <!-- trying to render their contents with MathJax upon submission. -->
    <shortanswer use-mathjax="yes"/>

</docinfo>
