<project>
  <targets>
    <target name="web">
      <format>html</format>
      <source>doc/guide/guide.xml</source>
      <publication>doc/guide/publication.xml</publication>
      <output-dir>output/html</output-dir>
    </target>
    <target name="print-latex">
      <format>latex</format>
      <source>doc/guide/guide.xml</source>
      <output-dir>doc/guide/output/latex</output-dir>
    </target>
    <target name="print">
      <format>pdf</format>
      <source>doc/guide/guide.xml</source>
      <output-dir>doc/guide/output/pdf</output-dir>
    </target>
  </targets>
  <executables>
    <latex>latex</latex>
    <pdflatex>pdflatex</pdflatex>
    <xelatex>xelatex</xelatex>
    <pdfsvg>pdf2svg</pdfsvg>
    <asy>asy</asy>
    <sage>sage</sage>
    <pdfpng>convert</pdfpng>
    <pdfeps>pdftops</pdfeps>
    <pdfcrop>pdf-crop-margins</pdfcrop>
    <pageres>pageres</pageres>
    <node>node</node>
    <liblouis>file2brl</liblouis>
  </executables>
</project>
